{
    "name": "glueful/payvia",
    "description": "Payvia: Unified payment gateway bridge for the Glueful PHP Framework (Stripe, Paystack, Flutterwave, and more).",
    "type": "glueful-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Tawiah Sowah",
            "email": "michael@glueful.dev"
        }
    ],
    "keywords": [
        "payments",
        "billing",
        "subscriptions",
        "stripe",
        "paystack",
        "flutterwave"
    ],
    "require": {
        "php": "^8.3",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "glueful/framework": "dev-main",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "homepage": "https://github.com/glueful/payvia",
    "autoload": {
        "psr-4": {
            "Glueful\\Extensions\\Payvia\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Glueful\\Extensions\\Payvia\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs --standard=Squiz src",
        "phpcbf": "vendor/bin/phpcbf --standard=Squiz src",
        "analyze": "vendor/bin/phpstan analyze src --level=5"
    },
    "extra": {
        "glueful": {
            "name": "Payvia",
            "displayName": "Payvia Payments",
            "description": "Unified payment gateway bridge for Glueful (Stripe, Paystack, Flutterwave, and more).",
            "version": "0.4.0",
            "icon": "assets/icon.png",
            "categories": [
                "payments",
                "billing"
            ],
            "publisher": "glueful-team",
            "provider": "Glueful\\Extensions\\Payvia\\PayviaServiceProvider",
            "requires": {
                "glueful": ">=1.22.0",
                "extensions": []
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
